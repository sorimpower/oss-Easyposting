@model IEnumerable<EasyPosting.Models.ApplicationUser>

@{
    ViewBag.Title = "관리자 페이지";
}

<h2>관리자 페이지</h2>

<p>@Html.ActionLink("새로운 계정 만들기", "Create")
</p>
<table class="table table-striped table-responsive">
    <tr>
        <th>
            사용자 이름
        </th>
        <th>
        </th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.UserName)
            </td>
            <td>
                @Html.ActionLink("권한 변경", "Edit", new { id = item.Id }) |
                @*Html.ActionLink("사용자 정보", "Details", new { id = item.Id }) |*@
                @Html.ActionLink("사용자 삭제", "Delete", new { id = item.Id })
            </td>
        </tr>
    }

</table>
